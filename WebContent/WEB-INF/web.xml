<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.socialmedia.bu.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>com.socialmedia.bu.Register</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Home</servlet-name>
    <jsp-file>/home.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>Profile</servlet-name>
    <jsp-file>/profile.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>EditProfile</servlet-name>
    <jsp-file>/editProfile.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>EditProfileServlet</servlet-name>
    <servlet-class>com.socialmedia.bu.EditProfile </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Propic</servlet-name>
    <servlet-class>com.socialmedia.bu.ImageDownloader </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Post</servlet-name>
    <servlet-class>com.socialmedia.bu.Post </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Feed</servlet-name>
    <servlet-class>com.socialmedia.bu.FeedMedia </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Avl</servlet-name>
    <servlet-class>com.socialmedia.bu.UserAvail </servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Profile</servlet-name>
    <url-pattern>/profile/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditProfile</servlet-name>
    <url-pattern>/editProfile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditProfileServlet</servlet-name>
    <url-pattern>/editProfileServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Propic</servlet-name>
    <url-pattern>/propic/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Feed</servlet-name>
    <url-pattern>/feed/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Post</servlet-name>
    <url-pattern>/postServlet</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>Avl</servlet-name>
    <url-pattern>/avl</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>200</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>
			index.html
		</welcome-file>
  </welcome-file-list>
</web-app>